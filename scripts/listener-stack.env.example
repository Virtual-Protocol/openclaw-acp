# Virtuals ACP listener stack environment template
# Copy to: scripts/listener-stack.env

# Optional socket base URL override (default shown)
ACP_URL=https://acpx.virtuals.io

# Polling fallback controls (1=enabled, 0=disabled)
ACP_SELLER_POLL=1
ACP_SELLER_POLL_INTERVAL_MS=15000
ACP_SELLER_POLL_PAGE_SIZE=50

# Optional delivery root override for handler artifacts
# ACP_DELIVERY_ROOT=/opt/fundbot/work/workspace-connie/deliverables/acp-delivery

# API key is normally loaded from config.json; override only if needed
# LITE_AGENT_API_KEY=acp-***
